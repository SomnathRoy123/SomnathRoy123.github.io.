<div class="grid-item">
  <div class="card h-100 hoverable project-card">
    
    {% if project.redirect %}
    <a href="{{ project.redirect }}">
      <div class="card-img-top">
        {% if project.img %}
          {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 30vw, 100vw" alt="project thumbnail" class="img-fluid rounded-top" %}
        {% endif %}
      </div>
    </a>
    {% else %}
    <a href="{{ project.url | relative_url }}">
      <div class="card-img-top">
        {% if project.img %}
          {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 30vw, 100vw" alt="project thumbnail" class="img-fluid rounded-top" %}
        {% endif %}
      </div>
    </a>
    {% endif %}

    <div class="card-body p-3">
      <h5 class="card-title font-weight-bold mb-2">
        {% if project.redirect %}
          <a href="{{ project.redirect }}" class="text-dark">{{ project.title }}</a>
        {% else %}
          <a href="{{ project.url | relative_url }}" class="text-dark">{{ project.title }}</a>
        {% endif %}
      </h5>
      <p class="card-text text-muted" style="font-size: 0.95rem; line-height: 1.5;">
        {{ project.description }}
      </p>
    </div>

    <div class="card-footer bg-white border-top-0 p-3 pt-0">
      <div class="d-flex justify-content-between align-items-center">
        
        <span class="badge badge-light text-uppercase text-muted border">
          {{ project.category }}
        </span>

        <div class="project-links">
          {% if project.github %}
          <a href="{{ project.github }}" class="icon-link mr-2" data-toggle="tooltip" title="View Code">
            <i class="fab fa-github fa-lg"></i>
          </a>
          {% endif %}
          
          {% if project.pdf %}
          <a href="{{ project.pdf }}" class="icon-link mr-2" data-toggle="tooltip" title="Read Paper">
            <i class="fas fa-file-pdf fa-lg"></i>
          </a>
          {% endif %}

          {% if project.website %}
          <a href="{{ project.website }}" class="icon-link" data-toggle="tooltip" title="Visit Website">
            <i class="fas fa-globe fa-lg"></i>
          </a>
          {% endif %}
        </div>

      </div>
    </div>

  </div>
</div>