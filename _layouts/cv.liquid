---
layout: default
---

<style>
  /* 1. UNLOCK THE WIDTH (So we can control it ourselves) */
  .post, .container, .content {
    max-width: 100% !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }
  
  /* 2. CV CONTAINER - CENTERED & COMPACT */
  :root {
    --cv-accent: #0056b3;
    --cv-text: #222;
    --cv-muted: #666;
    --cv-bg: #f8f9fa;
    --cv-border: #eaeaea;
  }

  .cv-web-container {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
    color: var(--cv-text);
    /* Tighter Width to bring everything to the center */
    max-width: 1000px; 
    margin: 0 auto; /* Centers the block */
    padding: 2rem 20px;
  }

  /* --- HEADER --- */
  .cv-web-header {
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--cv-border);
    padding-bottom: 2rem;
    text-align: center; /* Center the name header */
  }
  
  .cv-web-name {
    font-size: 3rem;
    font-weight: 800;
    color: #111;
    letter-spacing: -1px;
    margin-bottom: 0.5rem;
  }

  .cv-web-label {
    font-size: 1.2rem;
    color: var(--cv-muted);
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .cv-actions {
    display: flex;
    justify-content: center; /* Center buttons */
    flex-wrap: wrap;
    gap: 10px;
  }

  .cv-social-btn {
    display: inline-flex;
    align-items: center;
    padding: 8px 18px;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 50px;
    color: #555;
    font-size: 0.9rem;
    font-weight: 600;
    transition: all 0.2s ease;
    text-decoration: none !important;
  }

  .cv-social-btn:hover {
    background: #111;
    color: #fff;
    border-color: #111;
    transform: translateY(-2px);
  }

  /* --- GRID LAYOUT (TIGHTER GAP) --- */
  .cv-web-grid {
    display: grid;
    /* Sidebar 250px, Content takes rest */
    grid-template-columns: 250px 1fr; 
    gap: 3rem; /* REDUCED GAP (Was 5rem) - Pulls right side in */
    align-items: start;
  }

  @media (max-width: 850px) {
    .cv-web-grid { grid-template-columns: 1fr; gap: 3rem; }
    .cv-web-header { text-align: left; }
    .cv-actions { justify-content: flex-start; }
  }

  /* --- SIDEBAR STYLING --- */
  .cv-sidebar-section { margin-bottom: 2.5rem; }
  
  .cv-sidebar-title {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    font-weight: 800;
    color: #999;
    margin-bottom: 1rem;
    border-bottom: 2px solid #eee;
    padding-bottom: 5px;
    display: block;
  }

  .cv-edu-item { margin-bottom: 1.5rem; }
  .cv-edu-school { font-weight: 700; font-size: 1rem; color: #111; }
  .cv-edu-degree { font-size: 0.95rem; color: #555; line-height: 1.4; margin-top: 2px; }
  .cv-edu-date { font-size: 0.85rem; color: #888; margin-top: 4px; }

  /* Skills Pills */
  .cv-skill-group { margin-bottom: 1.2rem; }
  .cv-skill-label { font-weight: 700; font-size: 0.95rem; display: block; margin-bottom: 6px; color: #333; }
  .cv-skill-tag {
    display: inline-block;
    background: #f1f5f9;
    color: #334155;
    padding: 5px 10px;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-right: 5px;
    margin-bottom: 6px;
    border: 1px solid #e2e8f0;
  }

  /* --- MAIN CONTENT STYLING --- */
  .cv-main-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
  }
  
  .cv-main-title::after {
    content: "";
    flex: 1;
    height: 1px;
    background: #eaeaea;
    margin-left: 20px;
  }

  /* Timeline */
  .cv-timeline-item {
    position: relative;
    padding-left: 30px;
    margin-bottom: 3rem;
    border-left: 2px solid #f0f0f0;
  }

  .cv-timeline-item::before {
    content: "";
    position: absolute;
    left: -7px;
    top: 6px;
    width: 12px;
    height: 12px;
    background: #fff;
    border: 3px solid var(--cv-accent);
    border-radius: 50%;
    transition: background 0.3s;
  }

  .cv-timeline-item:hover::before {
    background: var(--cv-accent);
  }

  /* Job Headers */
  .cv-job-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
    flex-direction: column; /* Stack on mobile, row on desktop */
  }

  @media(min-width: 600px) {
    .cv-job-header { flex-direction: row; }
  }

  /* Clickable Link Styles */
  .cv-job-role { 
    font-size: 1.2rem; 
    font-weight: 700; 
    color: #111; 
    line-height: 1.2;
    text-decoration: none;
    transition: color 0.2s;
  }

  a.cv-job-role:hover {
    color: var(--cv-accent);
    text-decoration: none;
  }

  .project-arrow {
    font-size: 0.8rem;
    margin-left: 5px;
    opacity: 0.4;
    transition: all 0.2s;
  }

  a.cv-job-role:hover .project-arrow {
    opacity: 1;
    transform: translateX(3px);
    color: var(--cv-accent);
  }

  .cv-job-company { font-size: 1rem; color: var(--cv-accent); font-weight: 500; margin-top: 4px; }
  
  .cv-job-date {
    background: #fff;
    border: 1px solid #ddd;
    padding: 3px 10px;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
    color: #555;
    white-space: nowrap;
    margin-top: 5px;
  }

  @media(min-width: 600px) {
    .cv-job-date { margin-top: 0; margin-left: 10px; }
  }

  /* Body Text */
  .cv-job-summary { 
    font-size: 1rem; 
    color: #444; 
    line-height: 1.6; 
    margin-bottom: 12px; 
  }
  
  .cv-job-bullets li {
    font-size: 0.95rem;
    color: #444;
    margin-bottom: 6px;
    line-height: 1.5;
  }

  /* Awards */
  .cv-award-item {
    display: flex;
    margin-bottom: 1.5rem;
    align-items: baseline;
  }
  .cv-award-year {
    font-weight: 700;
    color: var(--cv-accent);
    width: 60px;
    font-size: 1rem;
    flex-shrink: 0;
  }
</style>

<div class="post">

  <article class="cv-web-container">

    <div class="cv-web-header">
      <h1 class="cv-web-name">{{ site.data.cv.name }}</h1>
      <div class="cv-web-label">{{ site.data.cv.label }}</div>
      
      <div class="cv-actions">
        <a href="{{ 'assets/pdf/cv.pdf' | relative_url }}" target="_blank" class="cv-social-btn" style="background: #111; color: #fff; border-color: #111;">
          <i class="fas fa-file-download"></i> Download PDF
        </a>
        <a href="mailto:{{ site.data.cv.email }}" class="cv-social-btn">
          <i class="fas fa-envelope"></i> Email
        </a>
        {% for social in site.data.cv.social_networks %}
        <a href="{{ social.url }}" target="_blank" class="cv-social-btn">
          <i class="fab fa-{{ social.network | downcase }}"></i> {{ social.network }}
        </a>
        {% endfor %}
      </div>
    </div>

    <div class="cv-web-grid">
      
      <aside>
        
        <div class="cv-sidebar-section">
          <div class="cv-sidebar-title">Education</div>
          {% for entry in site.data.cv.sections.Education %}
          <div class="cv-edu-item">
            <div class="cv-edu-school">{{ entry.institution }}</div>
            <div class="cv-edu-degree">{{ entry.studyType }} in {{ entry.area }}</div>
            <div class="cv-edu-date">{{ entry.start_date }} – {{ entry.end_date }}</div>
            {% if entry.score %}
            <div style="font-size: 0.85rem; color: var(--cv-accent); font-weight: 600; margin-top: 4px;">
              GPA: {{ entry.score }}
            </div>
            {% endif %}
          </div>
          {% endfor %}
        </div>

        <div class="cv-sidebar-section">
          <div class="cv-sidebar-title">Technical Skills</div>
          {% for skill in site.data.cv.skills %}
          <div class="cv-skill-group">
            <span class="cv-skill-label">{{ skill.name }}</span>
            <div>
              {% assign keywords = skill.keywords | split: ", " %}
              {% for kw in keywords %}
              <span class="cv-skill-tag">{{ kw }}</span>
              {% endfor %}
            </div>
          </div>
          {% endfor %}
        </div>

        <div class="cv-sidebar-section">
          <div class="cv-sidebar-title">Languages</div>
          {% for lang in site.data.cv.languages %}
          <div style="font-size: 0.95rem; margin-bottom: 6px;">
            <span style="font-weight: 600;">{{ lang.name }}</span> <span style="color:#888;">- {{ lang.summary }}</span>
          </div>
          {% endfor %}
        </div>

      </aside>

      <main>
        
        <section>
          <h2 class="cv-main-title">Research Experience</h2>
          
          {% for entry in site.data.cv.sections.Experience %}
          <div class="cv-timeline-item">
            <div class="cv-job-header">
              <div>
                {% if entry.url %}
                  <a href="{{ entry.url | relative_url }}" class="cv-job-role">
                    {{ entry.position }} <i class="fas fa-arrow-right project-arrow"></i>
                  </a>
                {% else %}
                  <div class="cv-job-role">{{ entry.position }}</div>
                {% endif %}
                
                <div class="cv-job-company">{{ entry.company }} • {{ entry.location }}</div>
              </div>
              <div class="cv-job-date">
                {{ entry.start_date | date: "%b %Y" }} – 
                {% if entry.end_date %}{{ entry.end_date | date: "%b %Y" }}{% else %}Present{% endif %}
              </div>
            </div>
            
            {% if entry.summary %}
            <div class="cv-job-summary">{{ entry.summary }}</div>
            {% endif %}
            
            {% if entry.highlights %}
            <ul class="cv-job-bullets">
              {% for item in entry.highlights %}
              <li>{{ item }}</li>
              {% endfor %}
            </ul>
            {% endif %}
          </div>
          {% endfor %}
        </section>

        <section>
          <h2 class="cv-main-title">Honors & Awards</h2>
          {% for entry in site.data.cv.sections.Awards %}
          <div class="cv-award-item">
            <div class="cv-award-year">{{ entry.date }}</div>
            <div>
              <div style="font-weight: 700; color: #111; font-size: 1.05rem;">{{ entry.title }}</div>
              <div style="font-size: 0.95rem; font-style: italic; color: #555;">{{ entry.awarder }}</div>
              <div style="font-size: 0.95rem; color: #666; margin-top: 4px;">{{ entry.summary }}</div>
            </div>
          </div>
          {% endfor %}
        </section>

        {% if site.data.cv.sections.Publications %}
        <section style="margin-top: 4rem;">
          <h2 class="cv-main-title">Key Publications</h2>
          {% for entry in site.data.cv.sections.Publications %}
          <div style="margin-bottom: 2rem;">
            <div style="font-weight: 700; font-size: 1.1rem;">{{ entry.title }}</div>
            <div style="color: #666; font-size: 1rem; margin-top: 4px;">{{ entry.authors | join: ", " }}</div>
            <div style="color: var(--cv-accent); font-size: 0.95rem; font-style: italic; margin-top: 4px;">
              {{ entry.publisher }} ({{ entry.releaseDate }})
            </div>
          </div>
          {% endfor %}
        </section>
        {% endif %}

      </main>

    </div>
  </article>
</div>